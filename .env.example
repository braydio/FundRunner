# Alpaca API
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_api_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Local LLM (optional)
LOCAL_LLM_API_URL=http://localhost:5051/v1/chat
LOCAL_LLM_API_KEY=your_local_llm_key
USE_LOCAL_LLM=false

# Trading Bot
DEFAULT_TICKERS=AAPL,MSFT,GOOGL
EXCLUDE_TICKERS=
DEFAULT_TICKERS_FROM_GPT=false

# SMTP Notification
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_EMAIL=recipient@example.com

# Simulation
SIMULATION_MODE=false
SIMULATED_STARTING_CASH=5000
MICRO_MODE=false
MICRO_ACCOUNT_SIZE=100
PORTFOLIO_MANAGER_MODE=false

# GPT Model and LLM Configuration
GPT_MODEL=gpt-4o-mini
GPT_JSON_STRICT=true
LLM_REQUEST_TIMEOUT=30

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=fundrunner-knowledge
CHROMA_MODEL=all-MiniLM-L6-v2

# OpenBB Configuration
OPENBB_API_KEY=your_openbb_api_key_here
# Add provider-specific keys as needed:
# FRED_API_KEY=your_fred_api_key
# POLYGON_API_KEY=your_polygon_api_key
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Agentic Workflow Configuration
AGENTS_ARTIFACTS_DIR=artifacts
AGENTS_MAX_CONTEXT_TOKENS=8000
AGENTS_AUTO_APPROVE=false
AGENTS_HUMAN_IN_LOOP=true

# Trader API
TRADIER_API_KEY=your_tradier_api_key_here
